{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "../src",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node", // Ensure this line is present
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
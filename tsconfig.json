{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "../src",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "declarationDir": "dist" // Ensure this is inside the dist directory
  
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}